{
  "name": "flexframe-css",
  "version": "1.0.0",
  "description": "A modern, utility-first CSS framework with cutting-edge features",
  "main": "dist/flexframe.css",
  "style": "dist/flexframe.css",
  "files": ["dist/", "src/", "README.md", "LICENSE"],
  "scripts": {
    "build": "sass src/framework.scss dist/flexframe.css --style=compressed",
    "build-dev": "sass src/framework.scss dist/flexframe.css --style=expanded",
    "watch": "sass src/framework.scss dist/flexframe.css --watch",
    "prepare": "npm run build"
  },
  "keywords": ["css", "framework", "utility-first", "responsive", "modern", "flexframe"],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/flexframe-css.git"
  },
  "homepage": "https://github.com/yourusername/flexframe-css#readme",
  "jsdelivr": "dist/flexframe.css",
  "unpkg": "dist/flexframe.css",
  "devDependencies": {
    "sass": "^1.69.0"
  }
}
